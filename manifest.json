{
  "manifest_version": 3,
  "name": "Spotify-Web Playback Controller",
  "version": "1.6",
  "description": "Complete Spotify-Web playback control with track navigation, volume and keyboard control.",
  "permissions": [
    "tabs",
    "scripting",
    "storage"
  ],
  "incognito": "split",
  "host_permissions": [
    "https://open.spotify.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Spotify-Web Playback Controller",
	"default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://open.spotify.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
    "resources": ["description_popup.html"],
    "matches": ["<all_urls>"]
  }],
  "commands": {
    "next-track": {
      "suggested_key": {
        "default": "Shift+Alt+Right"
      },
      "description": "Next track",
      "global": true
    },
    "prev-track": {
      "suggested_key": {
        "default": "Shift+Alt+Left"
      },
      "description": "Previous track",
      "global": true
    },
    "play-pause": {
      "suggested_key": {
        "default": "Shift+Alt+Up"
      },
      "description": "Play/Pause",
      "global": true
    },
    "pause": {
      "suggested_key": {
        "default": "Shift+Alt+Down"
      },
      "description": "Pause",
      "global": true
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}